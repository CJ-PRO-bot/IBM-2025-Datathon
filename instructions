# Windows PowerShell
python -m venv .venv
.\.venv\Scripts\activate
pip install -r requirements.txt

# set up env
copy .env.example .env

# start clean
Remove-Item .\site.db -Force -ErrorAction SilentlyContinue
New-Item -ItemType Directory -Force .\static\uploads | Out-Null

#Configure (env vars)
#You can run with defaults (model path auto-detected) or set explicit env vars.
#Run (dev)
python app.py
# App starts on http://127.0.0.1:5000

#python version:
python 3.10.x

